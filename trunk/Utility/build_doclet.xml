<?xml version="1.0" encoding="UTF-8"?>

<project name="project" default="springdoclet">
	<description>
            description
    </description>
	<property file="build.win.properties" />

	<!-- クラスパス名の定義 -->
	<path id="project.class.path">
		<pathelement path="${java.class.path}" />
		<pathelement path="${class.dir}" />
		<pathelement path="${jar.dir}" />
		<fileset dir="${jar.dir}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${hibernatetools.dir}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${xdoclet.home}">
			<include name="**/*.jar" />
		</fileset>
		<fileset dir="${spring.home}">
			<include name="*.jar" />
		</fileset>
	</path>
	<!-- クラスパス名の定義 以上 -->



	<taskdef name="hibernatedoclet" classname="xdoclet.modules.hibernate.HibernateDocletTask" classpathref="project.class.path" />


	<!-- ================================= 
          target: springdoclet              
         ================================= -->
	<target name="springdoclet">
		<taskdef name="springdoclet" classname="xdoclet.modules.spring.SpringDocletTask" classpathref="project.class.path" />
		<springdoclet destdir="source">
			<fileset dir="source" includes="**/**.java" />
			<springxml destinationFile="beans_auto.xml" />
		</springdoclet>
	</target>
</project>

